{
  "extends": [
    "eslint:recommended",
    "airbnb-base"
  ],
  "rules": {
    "func-names": "off",
    "global-require": "off",
    "import/no-dynamic-require": "off",
    "import/no-extraneous-dependencies": "off",
    "max-len": [
      "error",
      120
    ],
    "object-curly-newline": [
      "error",
      {
        "consistent": true
      }
    ]
  }
}
